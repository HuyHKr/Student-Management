<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddStudentActivity">

    <EditText
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/mssvI"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:ems="10"
        android:inputType="text"
        android:hint="MSSV"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/nameI"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:gravity="center_vertical"
        android:inputType="text"
        android:hint="HỌ VÀ TÊN"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/mssvI"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/mssvI"
        app:layout_constraintTop_toBottomOf="@+id/mssvI" />

    <EditText
        android:id="@+id/birthdayI"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:gravity="center_vertical"
        android:inputType="text"
        android:hint="NGÀY SINH"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/nameI"
        app:layout_constraintStart_toStartOf="@+id/nameI"
        app:layout_constraintTop_toBottomOf="@+id/nameI" />

    <AutoCompleteTextView
        android:id="@+id/quequanI"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:textStyle="bold"
        android:hint="QUÊ QUÁN"
        android:completionThreshold="2"
        app:layout_constraintEnd_toEndOf="@+id/birthdayI"
        app:layout_constraintStart_toStartOf="@+id/birthdayI"
        app:layout_constraintTop_toBottomOf="@+id/birthdayI" />

    <Button
        android:id="@+id/commitButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Thêm"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/quequanI"
        app:layout_constraintStart_toStartOf="@+id/quequanI"
        app:layout_constraintTop_toBottomOf="@+id/error" />

    <TextView
        android:id="@+id/error"
        android:layout_width="0dp"
        android:layout_height="wrap_content"


        app:layout_constraintEnd_toEndOf="@+id/quequanI"
        app:layout_constraintStart_toStartOf="@+id/quequanI"
        app:layout_constraintTop_toBottomOf="@+id/quequanI" />

</androidx.constraintlayout.widget.ConstraintLayout>